{
    "Ryujinx": {
        "files": [
            {
                "paths": [ 
                    "${HOME}/.config/Ryujinx/Config.json",
                    "${HOME}/.var/app/net.retrodeck.retrodeck/config/Ryujinx/Config.json",
                    "${APPDATA}/Ryujinx/Config.json",
                    "C:/Users/${USER}/AppData/Roaming/Ryujinx/Config.json",
                    "C:/Ryujinx/portable/Config.json"
                ],
                "replacements": [
                    {
                        "name": "Ryujinx / language code",
                        "pattern": "\"language_code\":.*,",
                        "value": "\"language_code\": \"${RYUJINX_LANGUAGE_CODE}\","
                    },
                    {
                        "name": "Ryujinx / system language",
                        "pattern": "\"system_language\":.*,",
                        "value": "\"system_language\": \"${RYUJINX_SYSTEM_LANGUAGE}\","
                    },
                    {
                        "name": "Ryujinx / system region",
                        "pattern": "\"system_region\":.*,",
                        "value": "\"system_region\": \"${RYUJINX_SYSTEM_REGION}\","
                    }
                ]
            }
        ]
    },
    "Cemu": {
        "files": [
            {
                "paths": [
                    "${HOME}/.config/Cemu/settings.xml",
                    "${HOME}/.var/app/net.retrodeck.retrodeck/config/Cemu/settings.xml",
                    "${APPDATA}/Cemu/settings.xml",
                    "C:/Cemu/settings.xml",
                    "C:/Users/${USER}/AppData/Roaming/Cemu/settings.xml"
                ],
                "replacements": [
                    {
                        "name": "Cemu / console language",
                        "pattern": "<console_language>.*</console_language>",
                        "value": "<console_language>${CEMU_CONSOLE_LANGUAGE}</console_language>"
                    }
                ]
            }
        ]
    },
    "RetroArch": {
        "files": [
            {
                "paths": [
                    "${HOME}/.var/app/org.libretro.RetroArch/config/retroarch/retroarch.cfg",
                    "${HOME}/.var/app/net.retrodeck.retrodeck/config/retroarch/retroarch.cfg",
                    "${APPDATA}/RetroArch/retroarch.cfg",
                    "C:/RetroArch/retroarch.cfg",
                    "C:/Users/${USER}/AppData/Roaming/RetroArch/retroarch.cfg"
                ],
                "replacements": [
                    {
                        "name": "RetroArch / user language",
                        "pattern": "user_language =.*",
                        "value": "user_language = \"${RETROARCH_USER_LANGUAGE}\""
                    },
                    {
                        "name": "RetroArch / video driver",
                        "pattern": "video_driver =.*",
                        "value": "video_driver = \"${RETROARCH_VIDEO_DRIVER}\""
                    },
                    {
                        "name": "RetroArch / netplay nickname",
                        "pattern": "netplay_nickname =.*",
                        "value": "netplay_nickname = \"${RETROARCH_NETPLAY_NICKNAME}\""
                    }
                ]
            }
        ]
    },
    "Dolphin": {
        "files": [
            {
                "paths": [
                    "${HOME}/.var/app/org.DolphinEmu.dolphin-emu/data/dolphin-emu/Dolphin.ini",
                    "${HOME}/.var/app/net.retrodeck.retrodeck/config/dolphin-emu/Dolphin.ini",
                    "${USERPROFILE}/Documents/Dolphin Emulator/Config/Dolphin.ini",
                    "${APPDATA}/Dolphin Emulator/Config/Dolphin.ini",
                    "C:/Users/${USER}/Documents/Dolphin Emulator/Config/Dolphin.ini"
                ],
                "replacements": [
                    {
                        "name": "Dolphin / GameCube language",
                        "pattern": "SelectedLanguage =.*",
                        "value": "SelectedLanguage = ${DOLPHIN_GC_LANGUAGE}"
                    },
                    {
                        "name": "Dolphin / Skip GameCube boot sequence",
                        "pattern": "SkipIPL = *",
                        "value": "SkipIPL = ${DOLPHIN_GC_SKIP_BOOT}"
                    },
                    {
                        "name": "Dolphin / GFX backend",
                        "pattern": "GFXBackend =.*",
                        "value": "GFXBackend = ${DOLPHIN_GFX_BACKEND}"
                    },
                    {
                        "name": "Dolphin / Fullscreen",
                        "pattern": "Fullscreen =.*",
                        "value": "Fullscreen = ${DOLPHIN_FULLSCREEN}"
                    }
                ]
            },
            {
                "paths": [
                    "${HOME}/.var/app/org.DolphinEmu.dolphin-emu/data/dolphin-emu/Wii/shared2/sys/SYSCONF",
                    "${HOME}/.var/app/net.retrodeck.retrodeck/data/dolphin-emu/Wii/shared2/sys/SYSCONF",
                    "${USERPROFILE}/Documents/Dolphin Emulator/Wii/shared2/sys/SYSCONF",
                    "${APPDATA}/Dolphin Emulator/Wii/shared2/sys/SYSCONF",
                    "C:/Users/${USER}/Documents/Dolphin Emulator/Wii/shared2/sys/SYSCONF"
                ],
                "replacements": [
                    {
                        "name": "Dolphin / Wii language",
                        "type": "hexadecimal",
                        "pattern": "IPL.LNG?",
                        "value": "IPL.LNG${DOLPHIN_WII_LANGUAGE}"
                    }
                ]
            }
        ]
    }
}